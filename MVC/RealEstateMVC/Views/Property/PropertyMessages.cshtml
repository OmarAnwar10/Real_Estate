@{
    ViewData["Title"] = "Property Messages";
    Layout = "AppLayout";
    ViewData["PageHeader"] = "Property Messages";
}
@section Styles {
        <link rel="stylesheet" href="~/css/propertyMessages.css">
}

        <div class="container">
            <div class="col-lg-8 col-md-12 mx-auto">
                <div class="dashboard-content">
                    <div class="submit-property-form bg-white p-4 shadow-sm">
                        <!-- Page Title -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2 class="text-primary">Messages for Property</h2>
                            <a href="@Url.Action("Index", "User")" class="btn btn-outline-primary btn-sm">Back to Property</a>
                        </div>
                        <div class="my-property">
                            <!-- Property Cards -->
                            <div class="row">
                                <!-- Horizontal Card for each property -->
                                <div class="col-md-12 mb-4">
                                    <!-- Message Cards -->
                                    <div class="message-card">
                                        <div class="message-header">
                                            <span class="sender-name">John Doe</span>
                                            <span class="message-date">Sep 28, 2024, 10:45 AM</span>
                                        </div>
                                        <span class="sender-phone">0107237693</span>
                                        <div class="message-body">

                                            <p>Hello, I am interested in the property and would like to know more
                                                about the amenities and availability. Please get back to me when
                                                possible. Thank you!</p>
                                        </div>
                                    </div>

                                    <div class="message-card">
                                        <div class="message-header">
                                            <span class="sender-name">Jane Smith</span>
                                            <span class="message-date">Sep 25, 2024, 03:30 PM</span>
                                        </div>
                                        <div class="message-body">
                                            <p>Is the property still available? I would like to schedule a visit
                                                next week.</p>
                                        </div>
                                    </div>

                                    <div class="message-card">
                                        <div class="message-header">
                                            <span class="sender-name">Michael Brown</span>
                                            <span class="message-date">Sep 20, 2024, 09:15 AM</span>
                                        </div>
                                        <div class="message-body">
                                            <p>I am interested in renting the property for 6 months. Could you
                                                provide more details on the lease terms?</p>
                                        </div>
                                    </div>

                                </div>
                                <!-- Repeat for other properties -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
