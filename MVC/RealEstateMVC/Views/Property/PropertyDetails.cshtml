@{
    ViewData["Title"] = "Property Details";
    Layout = "AppLayout";
    ViewData["PageHeader"] = "Property Details";
}
@section Styles {
    <link rel="stylesheet" href="~/css/propertyDetails.css">
}

<div class="container mt-5">
        <div class="row">
            <!-- Property Images and Owner Details -->
            <div class="col-lg-8 position-relative">
                <!-- Property Images -->
                <div id="propertyImagesCarousel" class="carousel slide property-images" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/assets/img/property-1/property4.jpg" class="d-block w-100"
                                alt="Property Image 1">
                        </div>
                        <div class="carousel-item">
                            <img src="~/assets/img/property-1/property3.jpg" class="d-block w-100"
                                alt="Property Image 2">
                        </div>
                        <div class="carousel-item">
                            <img src="~/assets/img/property-1/property1.jpg" class="d-block w-100"
                                alt="Property Image 3">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#propertyImagesCarousel"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#propertyImagesCarousel"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <!-- For Sale Badge -->
                <span class="badge-for-sale">For Sale</span>
            </div>

            <!-- Owner Details -->
            <div class="col-lg-4">
                <div class="owner-details text-center">
                    <img src="~/assets/img/client-face1.png" alt="Owner Image">
                    <h5>John Doe</h5>
                    <span><i class="fas fa-phone"></i> +1 234 567 890</span>
                </div>

            </div>
        </div>

        <div class="row">
            <!-- Property Images and Owner Details -->
            <div class="col-lg-8 position-relative">
                <!-- Property Details Section -->
                <div class="property-details mt-5">
                    <h2 class="mb-3">Modern Family Home</h2>
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Price</th>
                                <td>$500,000</td>
                            </tr>
                            <tr>
                                <th>Location</th>
                                <td>123 Kathal St. Tampa City</td>
                            </tr>
                            <tr>
                                <th>Area</th>
                                <td>3500 sq ft</td>
                            </tr>
                            <tr>
                                <th>Property Type</th>
                                <td>Villa</td>
                            </tr>
                            <tr>
                                <th>Bedrooms</th>
                                <td>4</td>
                            </tr>
                            <tr>
                                <th>Bathrooms</th>
                                <td>3</td>
                            </tr>
                            <tr>
                                <th>City</th>
                                <td>Tampa</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Property Description -->
                <div class="property-description mt-4">
                    <h4>Description:</h4>
                    <p>This beautiful family home is located in a prime area with excellent access to schools and parks.
                        It
                        offers spacious living areas, modern amenities, and a large garden perfect for families.</p>
                </div>

                <!-- Amenities Section -->
                <div class="amenities mt-4">
                    <h4>Amenities:</h4>
                    <ul class="row">
                        <li class="col-md-4"><i class="fas fa-check"></i> Garage</li>
                        <li class="col-md-4"><i class="fas fa-check"></i> Two Stories</li>
                        <li class="col-md-4"><i class="fas fa-check"></i> Laundry Room</li>
                        <li class="col-md-4"><i class="fas fa-check"></i> Pool</li>
                        <li class="col-md-4"><i class="fas fa-check"></i> Garden</li>
                        <li class="col-md-4"><i class="fas fa-check"></i> Elevator</li>
                        <li class="col-md-4"><i class="fas fa-check"></i> Balcony</li>
                        <li class="col-md-4"><i class="fas fa-check"></i> Parking</li>
                        <li class="col-md-4"><i class="fas fa-check"></i> Central Heating</li>
                        <li class="col-md-4"><i class="fas fa-check"></i> Furnished</li>
                    </ul>
                </div>
            </div>

            <!-- Owner Details -->
            <div class="col-lg-4">
                <!-- Contact Form -->
                <div class="contact-owner-form mt-4">
                    <h4>Contact Owner:</h4>
                    <form>
                        <div class="mb-3">
                            <label for="yourName" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="yourName" placeholder="Enter your name">
                        </div>
                        <div class="mb-3">
                            <label for="yourEmail" class="form-label">Your Email</label>
                            <input type="email" class="form-control" id="yourEmail" placeholder="Enter your email">
                        </div>
                        <div class="mb-3">
                            <label for="yourMessage" class="form-label">Your Message</label>
                            <textarea class="form-control" id="yourMessage" rows="4"
                                placeholder="Write your message"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="yourPhone" class="form-label">Your Phone Number</label>
                            <input type="text" class="form-control" id="yourPhone"
                                placeholder="Enter your phone number">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    