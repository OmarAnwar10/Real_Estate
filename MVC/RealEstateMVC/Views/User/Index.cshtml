@{
    ViewData["Title"] = "Profile";
    Layout = "AppLayout";
    ViewData["PageHeader"] = "My Profile";

    var val = ViewData["Val"] != null ? (int)ViewData["Val"] : 0;
}
@section Styles {
    <link rel="stylesheet" href="~/css/profile.css">
        <link rel="stylesheet" href="~/css/propertyMessages.css">
}


<script type="text/javascript">
    var val = @val; // Pass val to JavaScript
</script>
<!-- Profile Form (Merged Content) -->

<div class="container" style="top: 90px; margin-top: 20px; margin-bottom: 20px;">
    <div class="row">
        <!-- Sidebar Section -->
        <div class="col-lg-4 col-md-12 col-sm-12">
            <div class="dashboard-nav-2" style="min-height: 695px;">
                <!-- Header -->
                <div class="header text-center py-4">
                    <h2>Emma Connor</h2>
                    <h4>Creative Director</h4>
                </div>
                <div class="profile-photo">
                    <img src="https://via.placeholder.com/150" alt="avatar" class="img-fluid">
                    <div class="change-photo-btn">
                        <label class="btn btn-secondary btn-sm">
                            <i class="fas fa-upload"></i> Upload Photo
                            <input type="file" class="d-none">
                        </label>
                    </div>
                </div>
                <div class="detail clearfix">
                    <ul>
                        <li><a class="partial-btn" id="loadPartial1Btn"><i class="fa fa-user"></i> My Profile</a></li>
                        <li><a class="partial-btn" id="loadPartial2Btn"><i class="fa fa-building"></i> My Property</a></li>
                        <li><a class="partial-btn" id="loadPartial3Btn"><i class="fa fa-heart"></i> Favorited Property</a></li>
                        <li><a class="partial-btn" id="loadPartial4Btn"><i class="fa fa-envelope me-1"></i> Messages</a></li>
                        <li><a class="partial-btn" id="loadPartial5Btn"><i class="fa fa-plus"></i> Submit Property</a></li>
                        <li><a class="partial-btn" id="loadPartial6Btn"><i class="fa fa-lock"></i> Change Password</a></li>

                        <li><a class="partial-btn" id="loadPartial7Btn"><i class="fa fa-sign-out"></i> Log Out</a></li>@*log out*@
                    </ul>
                </div>
            </div>
        </div>

        <!-- Main Content Section -->
        <div class="col-lg-8 col-md-12" id="partialViewContainer">
            <!-- The chosen partial view will be loaded here -->
        </div>

        <!-- Reference the external JS file -->
        <script src="~/js/userPartialsLoader.js"></script>


    </div>
</div>