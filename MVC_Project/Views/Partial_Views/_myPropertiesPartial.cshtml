<h4>My Properties</h4>
<div class="my-property">
    <!-- Property Cards -->
    <div class="row">
        <!-- Horizontal Card for each property -->
        <div class="col-md-12 mb-4">
            <div class="card h-100 shadow-sm flex-row">
                <!-- Property Image -->
                <img src="/assets/img/property-1/property1.jpg"
                     class="card-img-left img-fluid" alt="property-img"
                     style="width: 350px; object-fit: cover;">
                <!-- Card Body (Property Details) -->
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title"><a href="#">Real Luxury Villa</a></h5>
                        <p class="card-text">
                            <i class="flaticon-pin"></i> 123 Kathal St.
                            Tampa City
                        </p>
                        <h6 class="text-primary"><span>$90.00</span> / monthly</h6>
                        <p class="text-muted">Date: 7.02.2021</p>
                    </div>
                    <!-- Action Buttons -->
                    <div class="actions mt-3">
                        <a href="edit-property.html" class="btn btn-outline-primary btn-sm">
                            <i class="fa fa-pencil me-1"></i> Edit
                        </a>
                        <a href="#" class="btn btn-outline-secondary btn-sm">
                            <i class="fa fa-eye-slash me-1"></i> Hide
                        </a>
                        <a href="#" class="btn btn-outline-danger btn-sm">
                            <i class="fa fa-trash me-1"></i> Delete
                        </a>
                        <a href="Property-Messages.html"
                           class="btn btn-outline-info btn-sm position-relative">
                            <i class="fa fa-envelope me-1"></i> Messages
                            <!-- شارة لعرض عدد الرسائل -->
                            <span class="badge bg-danger position-absolute top-0 start-100 translate-middle">
                                3 <!-- عدد الرسائل -->
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Repeat for other properties -->
    </div>
</div>